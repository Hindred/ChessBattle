<div class="container" style="margin: 100px 0">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 class="text-dark">Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label class="text-dark">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <label class="text-dark pt-2">Subtitulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}">
                </div>
                <div class="form-group">
                    <p>
                        <label class="text-muted mt-2">Imagen: <input type="file" class="form-control py-3" name="imagen" id="imagen"></label>
                    </p>
                    <p class="mb-3">
                        <label class="text-dark"><input type="checkbox" name="img_delete" id="img_delete" value="1">
                        Eliminar imagen actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>
                <div class="form-group pb-4">
                    <textarea name="cuerpo" class="form-control" rows="4">{{novedad.cuerpo}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
            <p class="text-dark mt-2">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>