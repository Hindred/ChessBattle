<div class="container " style="margin: 100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 class="text-dark mb-3">Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group mt-2">
                    <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="form-group mt-2">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
                <div class="form-group mt-2">
                    <label class="text-muted">Imagen:
                        <input type="file" class="form-control py-4" name="imagen" id="imagen">
                    </label>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Guardar</button>
            </form>
            {{#if error}}
            <p class="text-danger mt-2 fs-5">{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>