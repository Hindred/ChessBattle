<div class="container bg-white" style="margin-top: 150px;">
    <div class="row">
        <div class="col pt-3">
            <p class="text-end">
                <span class="text-dark p-2">Hola {{usuario}}</span>
                <a href="/admin/adminlog/logout" class="btn btn-danger">Cerrar sesion <i
                        class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
        <div class="row mb-3">
            <div class="col-sm-12 col-md-7">
                <h2 class="text-dark">Listado de novedades</h2>
            </div>
            <div class="col-sm-12 col-md-2 text-end">
                <a href="/admin/novedades/agregar" class="btn btn-success mt-2"><i class="fas fa-plus"></i>
                    Nuevo</a>
            </div>
            <div class="col-sm-12 col-md-3">
                <form class="form-inline my-2 input-group" action="/admin/novedades" method="get">
                    <input class="form-control" type="search" placeholder="Search" aria-label="Search" name="q" {{#if
                        q}} value="{{q}}" {{/if}}>
                    <button class="btn btn-secondary py-2 my-sm-0" type="submit"><i class="fa fa-search"
                            aria-hidden="true"></i></button>
                </form>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table class="table table-striped">
                    <thead>
                        <tr class="table-dark">
                            <th scope="col">#</th>
                            <th scope="col">Titulo</th>
                            <th scope="col">Imagen</th>
                            <th scope="col" class="text-end">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each novedades}}
                        <tr>
                            <td scope="row">{{id}}</td>
                            <td>{{titulo}}</td>
                            <td>{{{imagen}}}</td>
                            <td class="text-end">
                                <a href="/admin/novedades/modificar/{{id}}" class="btn tn-secondary"><i
                                        class="fas fa-pencil-alt"></i></a>
                                <a href="/admin/novedades/eliminar/{{id}} " class="btn tn-secondary"><i
                                        class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{#if is_search}}
                {{#unless novedades.length}}
                <p class="text-dark">No se encontraron resultados para "{{q}}"</p>
                {{/unless}}
                {{/if}}
            </div>
        </div>
    </div>
</div>